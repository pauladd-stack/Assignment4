<Window x:Class="Assignment4.ModalForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4"
        mc:Ignorable="d"
        Title="ModalForm" Height="100" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="firstName" Width="50" Text="first"></TextBox>
            <TextBox x:Name="lastName" Width="50" Text="last"></TextBox>

            <Button x:Name="add" Content="Add" Click="add_Click"></Button>
        </StackPanel>
        
    </Grid>
</Window>
