<Window x:Class="Assignment4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <ListView x:Name="listView" ItemsSource="{Binding MyList}" GotFocus="list_GotFocus">
        </ListView>
        <StackPanel Grid.Row="1">
            <Button Content="Add Employee" Height="50" Click="Button_Click"></Button>
            <Button Content="Remove Employee" Height="50" Click="Button_Click_1"></Button>

        </StackPanel>
        
        
    </Grid>
</Window>
